{
  "name": "@chromatika/tailwind-palette",
  "version": "0.1.0",
  "description": "Tailwind color palette as Chromatika color scales",
  "author": "Tim Morris <timthewebguy@gmail.com>",
  "homepage": "https://github.com/tkofh/chromatika#readme",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkofh/chromatika.git"
  },
  "scripts": {
    "build": "unbuild",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "prepublish": "yarn test && yarn build",
    "playground": "vite ./playground/"
  },
  "bugs": {
    "url": "https://github.com/tkofh/chromatika/issues"
  },
  "devDependencies": {
    "unbuild": "^1.1.1",
    "vite": "^4.1.1"
  },
  "dependencies": {
    "@chromatika/core": "0.1.0"
  }
}
